@model RentACarSystemWeb.ViewModels.Queries.ChooseDateViewModel

@{
    ViewData["Title"] = "ChooseDate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>ChooseDate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input class="form-control" asp-for="StartDate" asp-format="{0:yyyy-MM-dd}"/>
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input class="form-control" asp-for="EndDate" asp-format="{0:yyyy-MM-dd}" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Create">See cars</a>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
